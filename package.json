{
	"name": "@piijai/vite-plugin-virtual-css-variables",
	"version": "1.2.0",
	"description": "Vite plugin for importing CSS variables from a JavaScript object.",
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.mjs",
			"require": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"files": [
		"./dist/*"
	],
	"scripts": {
		"prepare": "husky",
		"prepublishOnly": "pnpm run build",
		"build": "tsup",
		"build:dev": "pnpm run build --watch",
		"test": "vitest run",
		"test:coverage": "pnpm run test --coverage",
		"test:dev": "vitest watch",
		"test:ui": "vitest --ui",
		"lint": "eslint . --ext js,ts,cjs,mjs",
		"lint:fix": "pnpm run lint --fix",
		"format": "prettier './**/*.{js,ts,cjs,mjs}'",
		"format:check": "pnpm run format --check",
		"format:fix": "pnpm run format --write",
		"release": "semantic-release"
	},
	"lint-staged": {
		"./**/*.{js,ts,cjs,mjs}": [
			"pnpm run lint:fix"
		],
		"./**/*.{js,ts,cjs,mjs,json}": [
			"pnpm run format:fix"
		]
	},
	"keywords": [
		"CSS",
		"CSS Custom Properties",
		"CSS Variables",
		"Virtual Module",
		"Vite",
		"Vite Plugin"
	],
	"author": "Philipp Jetschina <kontakt@jetschina.de>",
	"license": "MIT",
	"peerDependencies": {
		"vite": "^3 || ^4 || ^5"
	},
	"devDependencies": {
		"@semantic-release/git": "^10.0.1",
		"@types/lodash.merge": "^4.6.9",
		"@typescript-eslint/eslint-plugin": "^8.9.0",
		"@typescript-eslint/parser": "^8.9.0",
		"@vitest/coverage-v8": "^2.1.3",
		"@vitest/ui": "^2.1.3",
		"eslint": "^9.12.0",
		"eslint-plugin-filenames": "^1.3.2",
		"eslint-plugin-import": "^2.31.0",
		"husky": "^9.1.6",
		"lint-staged": "^15.2.10",
		"prettier": "^3.3.3",
		"prettier-cli": "^0.1.0",
		"rollup": "^4.24.0",
		"semantic-release": "^24.1.2",
		"tsup": "^8.3.0",
		"typescript": "^5.6.3",
		"vite": "^5.4.9",
		"vitest": "^2.1.3"
	},
	"dependencies": {
		"lodash.merge": "^4.6.2"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/piijai/vite-plugin-virtual-css-variables.git"
	},
	"publishConfig": {
		"access": "public"
	},
	"packageManager": "pnpm@9.12.1+sha512.e5a7e52a4183a02d5931057f7a0dbff9d5e9ce3161e33fa68ae392125b79282a8a8a470a51dfc8a0ed86221442eb2fb57019b0990ed24fab519bf0e1bc5ccfc4"
}
